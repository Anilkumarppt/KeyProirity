<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BasicTest"
    android:background="@drawable/chatbackground"
    tools:showIn="@layout/activity_basic_test">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_list_users"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="@color/trasnparent"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:onClick="sendImage"
                android:scaleType="fitCenter"
                android:background="@drawable/ic_camera_alt_black_24dp" />

            <EditText
                android:id="@+id/input_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:paddingLeft="8dp"
                android:ems="10"
                android:paddingHorizontal="10dp"
                android:hint="Write the Message"
                android:background="@drawable/edittextbackground"
                android:paddingRight="6dp" />

            <ImageButton
                android:id="@+id/send_inputmessage"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendMessage"
                android:background="@drawable/ic_send_black_24dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>